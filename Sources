#下边这行指定生成驱动名字DDK_HelloWorld.sys
TARGETNAME=TP_DDK
#下边这行指定生成文件的类型DRIVER指驱动
TARGETTYPE=DRIVER
#下边这行指定生成驱动所在的路径\SYS\DDK_HelloWorld.sys
TARGETPATH=Release
#下边这行指定相关头文件所在目录路径
INCLUDES=$(BASEDIR)\inc;\
      $(BASEDIR)\inc\wxp;\ 

##上边必空一行D:\WINDDK\3790.1830 等价$(BASEDIR)
#下边这行指定驱动源代码*.cpp或者*.c
SOURCES=util.c\
		hook.c\
		ade32.c\
		Inline_Hook_NtOpenProcess.c\
		ObCallbacks.c\
		main.c\ 
		